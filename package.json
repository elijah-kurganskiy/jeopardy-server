{
  "name": "jeopardy-server",
  "version": "1.0.0",
  "description": "Server for game Jeopardy",
  "main": "index.js",
  "author": "Ilya Kurganskiy",
  "license": "MIT",
  "private": true,
  "scripts": {
    "docker-watch-server": "docker-compose -f docker/docker-compose.yml up",
    "docker-stop": "docker-compose -f docker/docker-compose.yml down",
    "docker-exec": "docker-compose -f docker/docker-compose.yml exec",
    "watch-server": "nodemon --watch 'src/**/*' -e ts,tsx --exec ts-node ./src/server.ts",
    "typeorm": "ts-node ./node_modules/.bin/typeorm",
    "lint:write": "eslint --debug src/ --fix",
    "prettier": "prettier --write src/**/*.js",
    "build": "tsc"
  },
  "devDependencies": {
    "@types/koa": "^2.11.3",
    "@types/koa-router": "^7.4.0",
    "@types/node": "^13.11.1",
    "@types/socket.io": "^2.1.4",
    "@typescript-eslint/eslint-plugin": "^2.27.0",
    "@typescript-eslint/parser": "^2.27.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-prettier": "^3.1.2",
    "husky": "^4.2.4",
    "lint-staged": "^10.1.3",
    "nodemon": "^2.0.3",
    "prettier": "^2.0.4",
    "ts-node": "^8.8.2",
    "typescript": "^3.8.3"
  },
  "dependencies": {
    "koa": "^2.11.0",
    "koa-router": "^8.0.8",
    "pg": "^8.0.0",
    "reflect-metadata": "^0.1.13",
    "sequelize": "^5.21.6",
    "socket.io": "^2.3.0",
    "typeorm": "^0.2.24"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --cache --fix",
      "prettier --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
